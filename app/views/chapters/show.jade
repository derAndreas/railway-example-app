.page-header
    h1 Details of Chapter

table.table.table-bordered
  tbody
    tr
      th Title
      td= chapter.title

.well
  != link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_book_chapter(params.book_id, chapter), {class: 'btn btn-primary'})
  != link_to('<i class="icon-remove icon-white"></i> Delete', path_to.book_chapter(params.book_id, chapter), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'})
  or
  != link_to('Back to index', path_to.book_chapters(params.book_id))
